<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
    <div class='row'>

      <h2>Books</h2>
      <%= render 'books/index',books: @books %>


        <table class="table table-bordered">
          <h3>7日分の投稿数</h3>
          <thead>
            <tr>
              <th>6日前</th>
              <th>5日前</th>
              <th>4日前</th>
              <th>3日前</th>
              <th>2日前</th>
              <th>昨日</th>
              <th>今日</th>
            </tr>
          </thead>
          <today>
            <tr>
              <td><%= @deys6_ago_book.count %></td>
              <td><%= @deys5_ago_book.count %></td>
              <td><%= @deys4_ago_book.count %></td>
              <td><%= @deys3_ago_book.count %></td>
              <td><%= @deys2_ago_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td><%= @today_book.count %></td>
            </tr>
          </today>
        </table>
      </div>


          <!--折れ線グラフ-->
     <div class="user_show_margin">
       <%= render "users/graph" %>
     </div>

        
        <%= form_with url: user_search_path(@user), method: :get do |f| %>
          <%= f.date_field :created_at %>　
          <%= f.submit '検索', class: 'btn btn-primary'  %>
        <% end %>

        <div id="search_result"> 
          <% if @search_book.present? %>
            <%= render 'search', search_book: @search_book %>
          <% end %>
        </div>